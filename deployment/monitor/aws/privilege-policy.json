{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:*"
      ],
      "Resource": [
        "arn:aws:s3:::${configBucket}",
        "arn:aws:s3:::${configBucket}/*",
        "arn:aws:s3:::${opsBucket}",
        "arn:aws:s3:::${opsBucket}/*",
        "arn:aws:s3:::${triggerBucket}",
        "arn:aws:s3:::${triggerBucket}/*"
      ]
    }
  ]
}