{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": ["sns:*"],
      "Resource": "arn:aws:sqs:*:${aws.accountID}:${topic}"
    },
    {
      "Effect": "Allow",
      "Action": [
        "lambda:InvokeFunction"
      ],
      "Resource": [
        "arn:aws:lambda:${aws.region}:${aws.accountID}:function:*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:*"
      ],
      "Resource": [
        "arn:aws:s3:::*",
        "arn:aws:s3:::*/*",
        "arn:aws:s3:::${triggerBucket}",
        "arn:aws:s3:::${triggerBucket}/*",
        "arn:aws:s3:::${destBucket}",
        "arn:aws:s3:::${destBucket}/*"
      ]
    }
  ]
}