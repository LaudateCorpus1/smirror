{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "ssm:DescribeParameters"
      ],
      "Resource": "*"
    },
    {
      "Sid": "Stmt1482841904000",
      "Effect": "Allow",
      "Action": [
        "ssm:GetParameters",
        "ssm:GetParameter"
      ],
      "Resource": [
        "arn:aws:ssm:${aws.region}:${aws.accountID}:parameter/smirror.*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:*"
      ],
      "Resource": [
        "arn:aws:s3:::*",
        "arn:aws:s3:::${s3ExternalBucket}",
        "arn:aws:s3:::${s3ExternalBucket}/*",
        "arn:aws:s3:::${s3Bucket}",
        "arn:aws:s3:::${s3Bucket}/*"
      ]
    },
    {
      "Sid": "Stmt1482841948000",
      "Effect": "Allow",
      "Action": [
        "kms:Decrypt"
      ],
      "Resource": [
        "arn:aws:kms:${aws.region}:${aws.accountID}:alias/smirror",
        "arn:aws:kms:${aws.region}:${aws.accountID}:key/*"
      ]
    }
  ]
}